{
  "name": "scaffold-stellar-frontend",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "concurrently \"stellar scaffold watch --build-clients\" \"npm run dev --workspace=app\"",
    "start": "concurrently \"stellar scaffold watch --build-clients\" \"npm run start --workspace=app\"",
    "build": "npm run build --workspace=app",
    "install:contracts": "npm install --workspace=packages && npm run build --workspace=packages",
    "preview": "npm run preview --workspace=app",
    "lint": "npm run lint --workspace=app",
    "format": "npm run format --workspace=app",
    "prepare": "husky"
  },
  "workspaces": [
    "app",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3"
  },
  "lint-staged": {
    "**/*.{json,md,toml}": "prettier --write"
  },
  "overrides": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
